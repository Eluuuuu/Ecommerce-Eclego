<form id="users">

    <div class="form-group px-0 d-flex justify-content-between align-items-center">
        <label for="Descripcion" class="col-3">Email</label>
        <input type="text" name="Descripcion" value="<%=data[0] ? data[0].email : '' %>" class="form-control" id="email"
            placeholder="Email_usuario">

    </div>
    <div class="form-group px-0 d-flex justify-content-center align-items-center">
        <label for="precio" class="col-3">Name</label>
        <input type="text" name="precio" value="<%=data[0] ? data[0].name : '' %>" class="form-control" id="name"
            placeholder="Nombre_usuario">
    </div>
    <div class="form-group px-0 d-flex justify-content-center align-items-center">
        <label for="sexo" class="col-3">lastName</label>
        <input type="text" name="precio" value="<%=data[0] ? data[0].lastName : '' %>" class="form-control" id="lastName"
            placeholder="lastName_usuario">
    </div>

</form>